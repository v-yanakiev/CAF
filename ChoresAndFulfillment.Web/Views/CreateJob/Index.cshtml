@{
    ViewData["Title"] = "Create new job";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <h4>Create a new job.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label>Job Name</label>
                <input class="form-control" name="JobName"/>
            </div>
            <div class="form-group">
                <label>Description</label>
                <textarea class="form-control" name="Description">
                </textarea>
            </div>
            <div class="form-group">
                <label>Payment</label>
                <input class="form-control" name="Payment"/>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Create Job</button>
        </form>
        <h2 style="color:red">@if (ViewData.ModelState.ContainsKey("CreateJobError")) { ViewData.ModelState["CreateJobError"].ToString(); }</h2>
        <h3>@ViewData["Success"]</h3>
    </div>
</div>


